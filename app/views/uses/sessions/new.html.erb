<div class="container pt-5">
<div class="col-sm-4 col-sm-offset-1">
<div class="login-form">
<h2 class="text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email,class:"form-label mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-controle form-control-lg"%>
  </div>

  <div class="form-group">
    <%= f.label :password,class:"form-label mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password",class:"form-controle form-control-lg" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="form-checkout mt-3">
      <%= f.check_box :remember_me , class:"form-check-input" %>
      <%= f.label :remember_me , class:"form-check-input"%>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Log in" , class:"btn btn-info mt-4"%>
  </div>
<% end %>

<%= render "uses/shared/links" %>
	
</div>
</div>
</div>








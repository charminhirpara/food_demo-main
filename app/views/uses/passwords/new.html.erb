<div class="container pt-5">
<div class="col-sm-4 col-sm-offset-1">
<div class="login-form">
<h2 class="text-center">Forgot your password?</h2>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "uses/shared/error_messages", resource: resource %>


  <div class="form-group">
      <%= f.label :email,class:"form-label mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-controle form-control-lg" %>
  </div>


  <div class="form-group">
      <%= f.submit "Send me reset password instructions" ,class:"btn btn-info mt-4s"%>
  </div>
<% end %>

<%= render "uses/shared/links" %>
	
</div>
</div>
</div>

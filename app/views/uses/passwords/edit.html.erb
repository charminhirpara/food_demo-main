<div class="container pt-5">
<div class="col-sm-4 col-sm-offset-1">
<div class="login-form">
<h2 class="text-center">Change your password</h2>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <div class="form-group">
  <%= render "uses/shared/error_messages", resource: resource ,class:"form-label mb-2" %>
  <%= f.hidden_field :reset_password_token ,class:"form-controle form-control-lg"%>
</div>
 <div class="form-group">
    <%= f.label :password, "New password" ,class:"form-label mb-2"%>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:"form-controle form-control-lg" %>
  </div>

  <div class="form-group">
      <%= f.label :password_confirmation, "Confirm new password" ,class:"form-label mb-2"%>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-controle form-control-lg"%>
  </div>


  <div class="form-group">
      <%= f.submit "Change my password"  ,class:"btn btn-info mt-4"%>
  </div>
<% end %>

<%= render "uses/shared/links" %>


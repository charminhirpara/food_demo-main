<div class="container pt-5">
<div class="col-sm-4 col-sm-offset-1">
<div class="login-form">
<h2 class="text-center">Sign up</h2>



<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "uses/shared/error_messages", resource: resource %>

  <div class="form-group">
      <%= f.label :email,class:"form-label mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-controle form-control-lg"%>
  </div>

  <div class="form-group">
      <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-controle form-control-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation ,class:"form-label mb-2"%>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-controle form-control-lg"%>
  </div>

  <div class="form-group">
      <%= f.submit "Sign up" , class:"btn btn-info mt-4"%>
  </div>
<% end %>

<%= render "uses/shared/links" %>
</div>
</div>
</div>



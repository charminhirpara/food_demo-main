<!-- ***** Call to Action Start ***** -->
  <section class="section section-bg" id="call-to-action" 
  </section>
  <div class="container rounded bg-white mt-5 mb-5">
  <div class="row">
    <div class="col-md-12 border-right">
      <%= form_with model: @user, url: '/profiles', method: :patch do |f|%>
        <div class="p-3 py-5">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-right text-center">Profile </h2>
          </div>
          <div class="row mt-2">
            <div class="col-md-4">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class:"form-control", placeholder:"first name" %>
            </div>
            <div class="col-md-4">
              <%= f.label :middle_name %>
              <%= f.text_field :middle_name, class:"form-control", placeholder:"middle name" %>
            </div>
            <div class="col-md-4">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class:"form-control", placeholder:"last name" %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-md-12">
              <%= f.label :email %>
              <%= f.text_field :email, class:"form-control", placeholder:"email" %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-md-12">
              <%= f.label :phone_no %>
              <%= f.text_field :phone_no, class:"form-control", placeholder:"phone no" %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-md-12">
              <%= f.label :address %>
              <%= f.text_field :address, class:"form-control", placeholder:"address" %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-md-12">
              <%= f.label :landmark %>
              <%= f.text_field :landmark, class:"form-control", placeholder:"landmark" %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-md-12">
              <%= f.label :city %>
              <%= f.text_field :city, class:"form-control", placeholder:"city" %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-md-12">
              <%= f.label :state %>
              <%= f.text_field :state, class:"form-control", placeholder:"state" %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-md-12">
              <%= f.label :country %>
              <%= f.text_field :country, class:"form-control", placeholder:"country" %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-md-12">
              <%= f.label :pin_code %>
              <%= f.text_field :pin_code, class:"form-control", placeholder:"pin_code" %>
            </div>
          </div>
        </div>
        <div class="mt-5 text-center">
          <button class="btn btn-primary profile-button mb-4" type="submit">Save Profile</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
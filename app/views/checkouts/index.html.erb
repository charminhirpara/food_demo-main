<section class="section section-bg" id="call-to-action"
style="background-image: url(<%= asset_path 'banner-image-1-1920x500.jpg' %>")

<div class="container">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="cta-content">
                <br>
                <br>
                <h2>Easy <em>Checkout</em></h2>
            </div>
        </div>
    </div>
</div>
</section>

<section class="section">
<div class="container">
<%= form_with url: orders_path, method: 'post' do |form| %>
    <br>
    <br>
    <div class="row">
        <div class="col-md-8">
            <div class="contact-form">
             
                    <div class="row">
                    
                        <div class="col-sm-6 col-xs-12">
                        <label>First Name </label>
                        <input type="text" name="first_name" placeholder="First Name *" value="<%= current_user.first_name %>">
                        </div>
                        <div class="col-sm-6 col-xs-12">
                        <label>Middle Name</label>
                        <input type="text" name="middle_name" placeholder="Middle Name *" value="<%= current_user.middle_name %>">
                        </div>
                    </div>
                    <div class="row">
                       
                        <div class="col-sm-12 col-xs-12">
                        <label>Surname</label>
                        <input type="text"  name="surname" placeholder="Surname *" value="<%= current_user.last_name %>">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                        <label>Address</label>
                        <input type="text" name="address" placeholder="Address *" value="<%= current_user.address%>">
                        </div>
                        
                    </div>
                    <div class="row">
                       <div class="col-sm-12 col-xs-12">
                         <label>Email</label>
                         <input type="text" name="email" placeholder="Email *" value="<%= current_user.email %>">
                      </div>
                    </div>
                    
               
                    <div class="row">
                        <div class="col-sm-6 col-xs-12">
                        <label>City</label>
                        <input type="text"name="city" placeholder="City *" value="<%= current_user.city%>">
                        </div>
                        <div class="col-sm-6 col-xs-12">
                        <label>State</label>
                        <input type="text" name="state" placeholder="State *" value="<%= current_user.state%>">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-xs-12">
                        <label>Phone No</label>
                        <input type="text"name="phone_no" placeholder="Phone No *" value="<%= current_user.phone_no %>">
                        </div>
                        <div class="col-sm-6 col-xs-12">
                        <label>Country</label>
                        <input type="text" name="country"placeholder="Country *" value="<%= current_user.country%>">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 col-xs-12">
                        <label>Pin Code</label>
                            <input type="text" name="pin_code" placeholder="Pin Code *" value="<%= current_user.pin_code%>">
                        </div>
                        <div class="col-sm-6 col-xs-12">
                            <label>Payment method</label>

                            <select>
                                <option value="">-- Choose --</option>
                                <option value="bank">Bank account</option>
                                <option value="cash">Cash</option>
                                <option value="paypal">PayPal</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="main-button">
                                <div class="float-left"> 
                                    <%= link_to "Back", carts_path%>
                                </div>
                                <div class="float-right">
                                <%= form_with url: orders_path, method: 'post' do |form| %>
                                    <button type="submit" class="btn btn-fefault cart">
                                        <i class="food-cart"></i>finsh
                                    </button>
                                <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
            
            </div>

            <br>
        </div>

        <div class="col-md-4">
        <% 
        total_sum=0
        @carts.each do |cart|
            qty=cart.food.price * cart.quantity
          total_sum += qty
        end
      %>
              <li class="list-group-item" style="margin:0 0 -1px">
                  <div class="row">
                        <div class="col-6">
                            <h4><strong>Total</strong></h4>
                        </div>

                        <div class="col-6">
                            <h4 class="text-right">Rs.<%= total_sum%></h4>
                        </div>
                    </div>
                </li>

                <li class="list-group-item" style="margin:0 0 -1px">
                    <div class="row">
                        <div class="col-6">
                            <strong>Sub-Total</strong>
                        </div>

                        <div class="col-6">
                            <h5 class="text-right">Rs.<%= total_sum%></h5>
                        </div>
                    </div>
              </li>
            <br>
        </div>
    </div>
  <% end %>
    </div>
</section>